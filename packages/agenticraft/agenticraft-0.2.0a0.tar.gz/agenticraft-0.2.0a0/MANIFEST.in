# Include important files
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md

# Include all provider documentation
recursive-include agenticraft/providers *.md

# Include all docs
recursive-include docs *.md *.png *.jpg *.svg
recursive-include examples *.py *.md

# Exclude test and development files
recursive-exclude tests *
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store

# Exclude development configs
exclude .pre-commit-config.yaml
exclude .gitignore
exclude .github
exclude Makefile
exclude mkdocs.yml
exclude mkdocs-simple.yml
