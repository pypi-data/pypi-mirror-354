{
    "name": "Vajra Dev Container",
    "image": "ghcr.io/project-vajra/vajra-dev:cuda12.4.1-torch2.4",
    "runArgs": [
        "--gpus", "all",
        "--shm-size", "12g"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.isort",
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cmake-tools",
                "streetsidesoftware.code-spell-checker",
                "wmaurer.change-case",
                "google.geminicodeassist",
                "github.copilot",
                "github.copilot-chat",
                "eamodio.gitlens",
                "github.vscode-github-actions",
                "ms-vscode.sublime-keybindings",
                "christian-kohler.path-intellisense",
                "earshinov.permute-lines",
                "xaver.clang-format",
                "ms-python.black-formatter",
                "LittleFoxTeam.vscode-python-test-adapter",
                "ms-vscode.makefile-tools"
            ],
            "settings": {
                "python.pythonPath": "/root/conda/envs/vajra/bin/python",
                "cmake.cmakePath": "/root/conda/envs/vajra/bin/cmake",
                "python.defaultInterpreterPath": "/root/conda/envs/vajra/bin/python"
            }
        }
    }
}
