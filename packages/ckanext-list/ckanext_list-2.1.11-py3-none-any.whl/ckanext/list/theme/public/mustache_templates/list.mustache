{{#records}}
    <div class="list-view-item-wrapper">
        <div class="list-view-item {{#image}}list-view-item-has-image{{/image}}">
            <div class="list-view-item-content">
                <h4>
                    <a target="_top" href="{{url}}{{versionPart}}">{{title}}</a>
                </h4>
                <ul class="list-unstyled">
                {{#attributes}}
                    <li><strong>{{label}}</strong>: {{value}}</li>
                {{/attributes}}
                </ul>
            </div>
            {{#image}}
            <div class="list-view-item-image">
                <a target="_top" href="{{url}}{{versionPart}}">
                    <img width="190" height="190" src="{{image.identifier}}" alt="{{image.title}}" />
                </a>
            </div>
            {{/image}}

        </div>
    </div>
    <hr />
{{/records}}
