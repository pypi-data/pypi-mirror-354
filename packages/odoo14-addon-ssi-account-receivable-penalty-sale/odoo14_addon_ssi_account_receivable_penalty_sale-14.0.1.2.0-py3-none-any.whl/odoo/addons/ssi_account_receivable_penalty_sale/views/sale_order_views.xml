<odoo>

<record id="view_order_form" model="ir.ui.view">
    <field name="name">sale.order - form</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="ssi_sale.view_order_form" />
    <field name="arch" type="xml">
        <xpath expr="//group[@name='policy_2']" position="inside">
            <field name="receivable_penalty_ok" />
        </xpath>

        <xpath expr="//div[@name='button_box']" position="inside">
            <button
                    name="action_view_penalty"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-exclamation"
                    attrs="{'invisible': [('receivable_penalty_ok', '=', False)]}"
                >
                <field
                        name="receivable_penalty_count"
                        widget="statinfo"
                        string="Penalties"
                    />
            </button>
        </xpath>
    </field>
</record>

</odoo>
