{
  "compilerOptions": {
    "verbatimModuleSyntax": true,
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.svelte"],
  "exclude": ["node_modules/**", "dist/**"]
}
