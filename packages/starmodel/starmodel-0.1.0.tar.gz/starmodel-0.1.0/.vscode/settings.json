{
    "makefile.configureOnOpen": false,
    "python.languageServer": "Default",
    // "python.envFile": "${workspaceFolder}/.env",
    "python.terminal.activateEnvironment": true,
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
    // Test settings
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.cwd": "${workspaceFolder}/tests",
    "python.testing.pytestPath": "${workspaceFolder}/.venv/bin/pytest",
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    "ruff.lint.ignore": [
        "F405",
        "F403",
        "F402"
    ],
    "github.copilot.chat.codeGeneration.instructions": [
        {
            "text": "Think step-by-step. For more complex tasks always create a plan and execute one step at the time. once you complete the first step respond like 'I've completed {step completed} please review and let me know if we can proceed to {next step}'",
        },
    ],
    // Python settings
    "python.analysis.autoSearchPaths": true,
    "python.analysis.extraPaths": [
        "${workspaceFolder}/src"
    ],
    "python.analysis.diagnosticSeverityOverrides": {
        "reportUnusedVariable": "none",
        "reportGeneralTypeIssues": "none",
        "reportArgumentType": false,
        "reportCallIssue": false,
        "reportOptionalCall": false,
        "reportAttributeAccessIssue": false,
        "reportOptionalMemberAccess": false,
        "reportUnboundVariable": "none",
        "reportWildcardImportFromLibrary": "none",
        "reportAssignmentType": "none",
        "reportReturnType": "none",
        "reportMissingImports": "none",
        "reportRedeclaration": "information",
    },
}