use rayon::prelude::*;
use pyo3::prelude::*;

#[pyfunction]
fn batch_grapheme_len(texts: Vec<String>) -> PyResult<Vec<usize>> {
    Ok(texts.par_iter()
        .map(|text| UnicodeSegmentation::graphemes(text, true).count())
        .collect())
}

#[cfg(test)]
mod tests {
    use super::*;

    #[test]
    fn test_split_basic() {
        let text = "Hello";
        assert_eq!(split(text), vec!["H", "e", "l", "l", "o"]);
    }

    #[test]
    fn test_split_emoji() {
        let text = "üë®‚Äçüë©‚Äçüëß‚Äçüë¶üëã";
        assert_eq!(split(text), vec!["üë®‚Äçüë©‚Äçüëß‚Äçüë¶", "üëã"]);
    }

    #[test]
    fn test_len_basic() {
        assert_eq!(len("Hello"), 5);
        assert_eq!(len(""), 0);
    }

    #[test]
    fn test_len_complex() {
        assert_eq!(len("üë®‚Äçüë©‚Äçüëß‚Äçüë¶ Hello üåç!"), 10);
    }

    #[test]
    fn test_slice_basic() {
        let text = "Hello";
        assert_eq!(slice(text, 0, 2).unwrap(), "He");
        assert_eq!(slice(text, 1, 4).unwrap(), "ell");
    }

    #[test]
    fn test_slice_emoji() {
        let text = "üë®‚Äçüë©‚Äçüëß‚Äçüë¶ Hello üåç!";
        assert_eq!(slice(text, 0, 1).unwrap(), "üë®‚Äçüë©‚Äçüëß‚Äçüë¶");
        assert_eq!(slice(text, 8, 9).unwrap(), "üåç");
    }

    #[test]
    fn test_slice_invalid() {
        let text = "Hello";
        assert!(slice(text, 3, 2).is_err()); // start > end
        assert!(slice(text, 0, 6).is_err()); // end > len
    }

    #[test]
    fn test_truncate_basic() {
        assert_eq!(truncate("Hello", 3), "Hel");
        assert_eq!(truncate("Hello", 5), "Hello");
        assert_eq!(truncate("Hello", 10), "Hello");
    }

    #[test]
    fn test_truncate_emoji() {
        assert_eq!(truncate("üë®‚Äçüë©‚Äçüëß‚Äçüë¶ Hello", 1), "üë®‚Äçüë©‚Äçüëß‚Äçüë¶");
        assert_eq!(truncate("üë®‚Äçüë©‚Äçüëß‚Äçüë¶ Hello", 2), "üë®‚Äçüë©‚Äçüëß‚Äçüë¶ ");
    }
}
