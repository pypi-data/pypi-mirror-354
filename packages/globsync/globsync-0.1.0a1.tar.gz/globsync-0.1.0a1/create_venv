#!/bin/bash

source "$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)/load_modules"
if [ ! -f $GLOBSYNC_VENV/pyvenv.cfg ]; then
    python -m venv $GLOBSYNC_VENV
fi
source $GLOBSYNC_VENV/bin/activate
python -m pip install --upgrade pip
python -m pip install --editable "$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
