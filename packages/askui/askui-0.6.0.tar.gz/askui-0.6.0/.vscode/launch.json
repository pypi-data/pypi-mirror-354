{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["-vv", "--no-cov", "${file}"],
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env.local",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug Tests: Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["-vv", "--no-cov", "${file}"],
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env.local",
            "console": "integratedTerminal"
        },
    ]
}
